<h1>Posts#Index</h1>
<h3><%= link_to 'Create', new_post_path %></h3>
<hr/>
<% @posts.each do |post| %>
    id: <%= post.id %>
    title: <%= post.title %>
    body: <%= post.body %>
    <%= link_to 'Show', post_path(post) %>
    <%= link_to 'Destroy', post_path(post), method: :delete %>
    <br/>
<% end %>